<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="MediaAttachedFilter" namespace="MediaAttachedFilter\MediaAttachedFilter" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

    <description>Media Attached Filter Coding Standards</description>

    <!--
	   Only scan files with .php extension.
   -->
    <arg name="extensions" value="php" />

    <!--
        Directories to exclude.
    -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <rule ref="WordPress-Docs"/>
    <rule ref="WordPress-Extra"/>
    <rule ref="WordPress"/>
</ruleset>
